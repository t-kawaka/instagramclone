<div class="col-md-6 offset-3 mt-5">
 <div class="card mb-4 shadow-sm">
    <div class="card-body">
      
      <h3>プロフィールを変更</h3>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        
        <div class="field">
          <%= f.label :名前 %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>
        
        <div class="field">
          <%= f.label :ユーザーネーム %><br />
          <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
        </div>
        
        <div class="field">
          <%= f.label :自己紹介 %><br />
          <%= f.text_area :introduce, autofocus: true, autocomplete: "introduce", rows: 3 %>
        </div>
        
        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      
         <div class="field">
          <%= f.label :パスワード入力 %><br />
          <%= f.password_field :current_password, autocomplete: "current-password" %>
        </div>
      　<div class="profile">
      　  <div class="actions col-md-2">
            <%= f.submit "送信する", class:"btn btn-ml btn-primary" %>
          </div>
      　</div>
      　<div class="profile">
      　  <div class="actions col-md-3">
            <%= link_to "トップページへ戻る", root_path, class:"btn btn-ml btn-info" %>
          </div>
      　</div>
      　<div class="profile">
      　  <div class="actions col-md-3">
            <%= link_to "パスワード変更", edit_user_password_path(current_user), class:"btn btn-ml btn-light" %>
          </div>
      　</div>
      <% end %>
    </div>
  </div>
</div>
<div class="container">
  <% if user_signed_in? %>
  <table>
    <tbody>
      <tr>
        <% if current_user.profile? %>
          <td class="personal_picture"><%= image_tag(current_user.profile_url,:width => "60px") %></td>
        <% end %>
        <td class="space">
          <div class="font">
            <%= current_user.username %><br>
            <%= current_user.introduce %><br>
            いいね件数: <%= current_user.favorites.count %>
          </div>
        </td>
      </tr>
    </tbody>
  </table>
  <% end %>

  <table class="table-light mt-3 mb-5 p-4">
    <% @blogs.each do |blog| %>
       <% if user_signed_in? && blog.user_id != current_user.id %>
        フォローユーザー名：<%= blog.user.username %><br>
        <%= blog.created_at.strftime('%Y年%m月%d日 %H時%M分%S秒') %>
         <tr>
          <td class="picture">
          <%=link_to image_tag(blog.image_url,:width => "300px"), blog_path(blog.id) %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </table>
</div>
